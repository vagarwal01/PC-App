<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg"
    tools:context=".Register">

    <TextView
        android:layout_width="409dp"
        android:layout_height="93dp"
        android:layout_x="0dp"
        android:layout_y="6dp"
        android:gravity="center"
        android:text="SIGNUP"
        android:textColor="#FF8C00"
        android:textSize="80sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_x="29dp"
        android:layout_y="120dp"
        android:background="@drawable/edittextshape1"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#4B0082"
        android:textColorHint="#4B0082"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_x="29dp"
        android:layout_y="190dp"
        android:background="@drawable/edittextshape1"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="#4B0082"
        android:textColorHint="#4B0082"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_x="29dp"
        android:layout_y="260dp"
        android:background="@drawable/edittextshape1"
        android:hint="Password"
        android:inputType="numberPassword"
        android:paddingLeft="20dp"
        android:textColor="#4B0082"
        android:textColorHint="#4B0082"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/cnfPassword"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_x="29dp"
        android:layout_y="330dp"
        android:background="@drawable/edittextshape1"
        android:hint="Confirm Password"
        android:inputType="numberPassword"
        android:paddingLeft="20dp"
        android:textColor="#4B0082"
        android:textColorHint="#4B0082"
        android:textSize="30sp" />

    <Button
        android:id="@+id/register"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_x="119dp"
        android:layout_y="410dp"
        android:background="@drawable/buttonshape2"
        android:text="Register"
        android:textColor="#FFFF00"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_x="6dp"
        android:layout_y="500dp"
        android:background="@drawable/bottomtextview"
        android:gravity="center"
        android:text="Join to save the Earth"
        android:textColor="#00FFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_x="75dp"
        android:layout_y="578dp"
        android:src="@drawable/save" />

</AbsoluteLayout>